<%= form_tag search_path, method: :get, class: "search" do %>
  <%= label_tag(:query, "Search:") %>
  <%= text_field_tag(:query) %>
  <%= select_tag(:duration, 
      options_for_select([
        ['Under 90 Minutes', 1],
        ['Between 90 and 120 Minutes', 2],
        ['Over 120 Minutes', 3]
      ])
  ) %>
  <%= submit_tag("Search") %>
<% end %>
