<%= link_to "Submit a movie!", new_movie_path %>
<%= link_to "Admin User Management", admin_users_path %>
<%= render 'search_form' %>
  <% @movies.each do |movie| %>
    <div class="row">
      <div class="container-fluid">
        <div class="movie-box col-md-3">
          <span class="movie-title"><%= movie.title %></span>
          <%= link_to image_tag(movie.poster_image_url.thumb), movie_path(movie), class: "movie-img center-block" %>
          <ul>
            
            <li><strong>Release Date:</strong> <%= formatted_date(movie.release_date) %></li>
            <li><strong>Director:</strong> <%= movie.director %></li>
            <li><strong>Duration:</strong> <%= movie.runtime_in_minutes %> minutes</li>
            <li><strong>Description:</strong> <%= movie.description %></li>
            <li><strong>Average Moving Rating:</strong> <%= movie.review_average %>/10</li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>