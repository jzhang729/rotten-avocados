  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= render 'search_form' %>
      </div>
    </div>
  </div>

<div class="container-fluid movies">
  <div class="media movie-box">
    <% @movies.each do |movie| %>
      <div class="media-left">
        <%= link_to image_tag(movie.poster_image_url), movie_path(movie), class: "movie-img" %>
      </div>
      <div class="media-body">
        <ul>
          <li><strong>Title:</strong> <%= link_to movie.title, movie_path(movie) %></li>
          <li><strong>Release Date:</strong> <%= formatted_date(movie.release_date) %></li>
          <li><strong>Director:</strong> <%= movie.director %></li>
          <li><strong>Duration:</strong> <%= movie.runtime_in_minutes %> minutes</li>
          <li><strong>Description:</strong> <%= movie.description %></li>
          <li><strong>Average Moving Rating:</strong> <%= movie.review_average %>/10</li>
        </ul>
    <% end %>
  </div>
</div>